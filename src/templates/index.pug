extends layouts/_layout_landing
block content
	+b('section').hero(id='home')
		.row
			+e('p').up-text SEP 11-16, 2018 / Kyiv
			+e('h1').title DApp DEV Blockchain Workshops & Hackathon
			+e('p').subtitle CODE CLEAN. SCALE FAST

	+section('About', !1, !1, 'about')
		+e.text.rich-text
			p Join us from 10th â€“ 16th September 2018 and be part of a vibrant DApp DEV Blockchain Workshops & Hackathon where developers, designers and professionals will get an opportunity to build products based on blockchain protocols.
			p We are looking forward to turning data into knowledge, buzz into reality, technological advances in the blockchain industry into economic and social wealth!
		+numbers(hackaton.numbers)

	+section('Mentors', !1, !1, 'mentors')
		+mentors(hackaton.mentors)

	+section('Blockchain Hackathon Program', !1, !1, 'program')
		+program(hackaton.program)

	+section('Tickets', !1, !1, 'tickets')
		+tickets(hackaton.tickets)

	+section('Partners', !1, !1, 'partners')
		+partners(hackaton.partners, '_partners')

	+section('Contributors', !1, '_contributors', !1)
		+partners(hackaton.contributors, '_contributors')

	+section('Venue', !1, !1, 'venue')
		+b.venue
			+e.contacts
				+e.address
					p IZONE Creative Community:
					p Naberezhno-Lugova St, 8, Kyiv, Ukraine
				+e.organizer
					p Organizer
					p Dapp Dev
					+e('a').email(href="mailto:hello@dappdev.org") hello@dappdev.org
			+e.map

	+section('FAQ', !1, !1, 'faq')
		+b.faq

	+section('Past events', !1, !1, 'past-events')
		+b.full-video
			a(href=`${hackaton.pastEvents.video}`)
		+b.img-tiles
			+e('h3').title #{hackaton.pastEvents.title}
			+e.tiles
				each img in hackaton.pastEvents.photos
					+e.tiles-item
						+e('img').img(src=`../img/past-events/${img}`)